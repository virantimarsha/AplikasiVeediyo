<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/berlin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp">
        <ImageView
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/logo2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Review"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:fontFamily="cursive"
            android:textStyle="bold"/>
    </LinearLayout>
    <FrameLayout
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="176dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/blackadam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#d9d9d9"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:paddingTop="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="100dp">
                    <TextView
                        android:textAlignment="center"
                        android:id="@+id/title_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:text="@string/judul_blackp"
                        android:textColor="#003153"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:progressTint="@color/gold"
                        android:id="@+id/rateblackp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:numStars="5" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="94dp"
            android:layout_height="150dp"
            android:layout_gravity="start|center"
            android:layout_marginStart="25dp"
            android:gravity="center">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/blackpanther" />
        </LinearLayout>
    </FrameLayout>
    <!--Edit text to enter course name-->

    <LinearLayout
        android:layout_margin="16dp"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_person_24"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <EditText
                android:textSize="15sp"
                android:id="@+id/idEdtCourseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Nama" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_email_24"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <EditText
                android:textSize="15sp"
                android:id="@+id/idEdtCourseDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Email" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_videocam_24"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <EditText
                android:textSize="15sp"
                android:id="@+id/idEdtCourseTracks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Judul Film" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_border_color_24"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <EditText
                android:textSize="15sp"
                android:id="@+id/idEdtCourseDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Review" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <Button
            android:textColor="@color/berlin"
            android:layout_marginEnd="10dp"
            android:layout_weight="20"
            android:backgroundTint="@color/abu"
            android:id="@+id/idBtnAddCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Review"
            android:textAllCaps="false" />
        <Button
            android:textColor="@color/berlin"
            android:layout_marginStart="10dp"
            android:layout_weight="20"
            android:backgroundTint="@color/abu"
            android:id="@+id/idBtnReadCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat Review"
            android:textAllCaps="false" />
    </LinearLayout>
</LinearLayout>
